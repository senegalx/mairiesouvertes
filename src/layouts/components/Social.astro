---
const { source, className } = Astro.props as { source: { icon: string; link: string; name: string }[]; className: string };
import DynamicIcon from "@/helpers/DynamicIcon";


---
<ul class={className}>
  {source?.map(({ platform, url }, i) => {
    return (
      <li>
        <a
          class="inline-block"
          aria-label={platform}
          href={url}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          {platform && <DynamicIcon className="inline-block" icon={platform} />}
        </a>
      </li>
    );
  })}
</ul>